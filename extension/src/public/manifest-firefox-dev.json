{
  "manifest_version": 3,
  "name": "ethui-dev",
  "description": "An Ethereum toolkit",
  "version": "0.0.0",
  "author": "Miguel Palhas <mpalhas@gmail.com>",
  "homepage_url": "https://github.com/ethui",
  "devtools_page": "devtools/index.html",
  "minimum_chrome_version": "102",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["./contentScript/index.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["./background/background.js"]
  },
  "options_ui": {
    "page": "./options/index.html",
    "browser_style": false
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "action": {
    "default_icon": {
      "16": "icons/ethui-purple-16.png",
      "48": "icons/ethui-purple-48.png",
      "96": "icons/ethui-purple-96.png",
      "128": "icons/ethui-purple-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "/inpage/inpage.js",
        "devtools/index.html",
        "panel/index.html"
      ]
    }
  ],
  "permissions": ["storage", "scripting"],
  "icons": {
    "16": "icons/ethui-purple-16.png",
    "48": "icons/ethui-purple-48.png",
    "96": "icons/ethui-purple-96.png",
    "128": "icons/ethui-purple-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "iron-wallet@naps62.com"
    }
  }
}
