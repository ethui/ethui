{
  "manifest_version": 3,
  "name": "ethui",
  "description": "An Ethereum toolkit",
  "author": "Miguel Palhas <mpalhas@gmail.com>",
  "homepage_url": "https://github.com/ethui",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["src/content-script/index.ts"],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "src/options/index.html",
    "browser_style": false
  },
  "{{chrome}}.background": {
    "service_worker": "src/background/index.ts"
  },
  "{{firefox}}.background": {
    "scripts": ["src/background/index.ts"]
  },
  "devtools_page": "src/devtools/index.html",

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' http://localhost:5173;"
  },

  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "src/inpage/index.js",
        "src/devtools/index.html",
        "src/panel/index.html",
        "src/options/index.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/ethui-black-16.png",
    "48": "icons/ethui-black-48.png",
    "96": "icons/ethui-black-96.png",
    "128": "icons/ethui-black-128.png"
  },

  "{{firefox}}.browser_specific_settings": {
    "gecko": {
      "id": "iron-wallet@naps62.com"
    }
  }
}
