{
  "private": true,
  "version": "1.1.1",
  "license": "MIT",
  "description": "A dev-oriented web3 wallet",
  "scripts": {
    "app:dev": "rm -rf target/debug/db.* && RUST_LOG=iron=debug tauri dev",
    "gui:build": "bun run --cwd gui build",
    "ext:dev": "bun run --cwd extension dev",
    "ext:build": "bun run --cwd extension build $@",
    "lint": "bun run lint:eslint && bun run lint:tsc && bun run lint:prettier",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "fix": "bun fix:eslint && bun fix:prettier",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier --write .",
    "setup": "bun install && bun ext:build"
  },
  "workspaces": [
    "extension",
    "gui"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.48.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.0.3"
  },
  "dependencies": {
    "typescript": "5.2.2"
  },
  "resolutions": {
    "postcss": "^8.4.31"
  }
}
