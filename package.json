{
  "private": true,
  "version": "1.8.0",
  "license": "MIT",
  "description": "An Ethereum toolkit",
  "scripts": {
    "app:dev": "rm -rf target/debug/db.*; RUST_LOG=ethui=debug cargo tauri dev --config bin/tauri-dev.conf.json --features debug",
    "gui:build": "yarn workspace @ethui/gui build",
    "storybook": "yarn workspace @ethui/react storybook",
    "ext:dev": "yarn workspace @ethui/extension dev",
    "ext:build": "yarn workspace @ethui/extension build \"$@\"",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:biome",
    "lint:eslint": "eslint .",
    "lint:tsc": "yarn workspaces foreach --all --parallel run tsc --noEmit",
    "lint:biome": "biome format . && biome lint .",
    "fix": "yarn fix:eslint && yarn fix:biome",
    "fix:eslint": "eslint --fix .",
    "fix:biome": "biome format --write . && biome lint --write .",
    "setup": "yarn install && yarn ext:build",
    "test": "yarn workspaces foreach --all run test"
  },
  "workspaces": [
    "extension",
    "packages/react",
    "packages/types",
    "packages/data",
    "packages/abiparse",
    "packages/form",
    "gui"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "assert": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2"
  },
  "dependencies": {
    "@tauri-apps/cli": "^1.5.14",
    "typescript": "5.4.5"
  },
  "resolutions": {
    "postcss": "^8.4.31",
    "jose": "4.15.5",
    "ws": "8.17.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@4.0.2"
}
