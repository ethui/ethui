{
  "private": true,
  "version": "1.9.0",
  "license": "MIT",
  "description": "An Ethereum toolkit",
  "scripts": {
    "dev": "yarn run app:dev",
    "app:dev": "yarn tauri dev --config bin/tauri.dev.conf.json --features debug --target $(yarn run rust-target)",
    "app:build": "yarn run app:build:nobundle && ./scripts/postbuild.sh && yarn run app:build:bundle",
    "app:build:nobundle": "yarn tauri build --no-bundle --target $(yarn run rust-target)",
    "app:build:bundle": "yarn tauri bundle --bundles app,dmg --target $(yarn run rust-target)",
    "rust-target": "rustc -vV | sed -n 's/host: //p'",
    "gui:build": "yarn workspace @ethui/gui build",
    "gui:devtools": "yarn workspace @ethui/gui devtools",
    "lint": "yarn lint:biome && yarn lint:tsc && yarn workspace @ethui/gui run lint",
    "lint:biome": "biome check .",
    "lint:tsc": "yarn workspaces foreach --all --parallel run tsc --noEmit",
    "fix": "yarn fix:biome",
    "fix:biome": "biome check --write .",
    "setup": "yarn install && yarn ext:dev",
    "test": "yarn workspaces foreach --all run test"
  },
  "workspaces": [
    "packages/types",
    "packages/data",
    "packages/abiparse",
    "packages/form",
    "gui"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/postcss": "^4.1.3",
    "assert": "^2.1.0",
    "html-to-image": "^1.11.13",
    "ts-unused-exports": "^11.0.1",
    "tsx": "^4.19.3"
  },
  "dependencies": {
    "@tauri-apps/cli": "^2.4.0",
    "typescript": "5.8.2"
  },
  "packageManager": "yarn@4.6.0"
}
