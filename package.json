{
  "private": true,
  "version": "1.6.0",
  "license": "MIT",
  "description": "An Ethereum toolkit",
  "scripts": {
    "app:dev": "rm -rf target/debug/db.*; RUST_LOG=ethui=debug cargo tauri dev --config bin/tauri-dev.conf.json --features debug",
    "gui:build": "bun run --cwd gui build",
    "lint": "bun run lint:eslint && bun run lint:tsc && bun run lint:prettier",
    "lint:eslint": "eslint .",
    "lint:tsc": "./scripts/bun-foreach.sh tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "fix": "bun run fix:eslint && bun run fix:prettier",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier --write .",
    "setup": "bun run install && bun run ext:build"
  },
  "workspaces": [
    "extension",
    "packages/*",
    "gui"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "assert": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@tauri-apps/cli": "^1.5.11",
    "typescript": "5.4.5"
  },
  "resolutions": {
    "postcss": "^8.4.31",
    "jose": "4.15.5"
  }
}
