{
  "files": {
    "ignore": [
      ".sqlx",
      ".direnv",
      ".pnp.cjs",
      ".pnp.loader.mjs",
      "**/*.gen.ts",
      "**/package.json",
      "packages/data/**/*.json",
      "packages/**/dist/**",
      "extension/dist",
      "gui/dist",
      "target"
    ]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": { "noUnusedVariables": "error" },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "noUselessElse": "off",
        "noNonNullAssertion": "off"
      },
      "performance": {
        "noAccumulatingSpread": "error",
        "noDelete": "error",
        "noReExportAll": "error"
      },
      "complexity": {
        "useOptionalChain": {
          "fix": "safe"
        }
      }
    }
  },
  "vcs": {
    "useIgnoreFile": true
  }
}
