{
  "formatter": {
    "indentStyle": "space",
    "ignore": [
      ".sqlx",
      "**/*.gen.ts",
      "packages/data/**/*.json",
      "packages/**/dist/**",
      "extension/dist",
      "gui/dist",
      "target"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "noUselessElse": "off",
        "noNonNullAssertion": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      }
    },
    "ignore": [
      ".sqlx",
      "**/*.gen.ts",
      "packages/data/**/*.json",
      "packages/**/dist/**",
      "extension/dist",
      "gui/dist",
      "target"
    ]
  },
  "vcs": {
    "useIgnoreFile": true
  }
}
