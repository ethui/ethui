{
  "build": {
    "beforeDevCommand": "bun run --cwd ../gui dev",
    "beforeBuildCommand": "bun run --cwd ../gui build",
    "devPath": "http://localhost:1420",
    "distDir": "../../gui/dist"
  },
  "package": {
    "productName": "iron",
    "version": "../../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "scope": ["$APPDATA/*"]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "iron-wallet",
      "targets": "all"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": {
        "default-src": "'self'",
        "font-src": ["'self'", "data:"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "connect-src": ["https://api.github.com"]
      }
    }
  }
}
