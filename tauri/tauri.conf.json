{
  "build": {
    "beforeDevCommand": "yarn workspace @iron/gui dev",
    "beforeBuildCommand": "yarn workspace @iron/gui build",
    "devPath": "http://localhost:1420",
    "distDir": "../gui/dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "iron",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "scope": ["$APPDATA/*"]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.naps26.iron",
      "targets": "all"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "iron",
        "width": 450,
        "height": 600
      }
    ]
  }
}
